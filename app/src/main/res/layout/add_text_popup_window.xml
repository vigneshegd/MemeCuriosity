<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#B3000000"
            android:layout_margin="@dimen/size6"
            >
            <TextView
            android:id="@+id/add_text_cancel_tv"
                android:layout_width="@dimen/size65"
                android:padding="@dimen/size4"
                android:gravity="center"
                android:textSize="15sp"            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
                style="@style/TextBold"
                android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
                android:layout_margin="@dimen/size10"
                android:background="@drawable/ripple_effect_rect"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
      />
            <TextView
                android:id="@+id/add_text_done_tv"
                style="@style/TextBold"

                android:layout_width="@dimen/size65"
                android:padding="@dimen/size4"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/size10"
                android:background="@drawable/ripple_effect_rect"
                android:text="@string/done"
                android:textAllCaps="false"
                android:textColor="@color/white" />


            <EditText
                android:id="@+id/add_text_edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size100"
                android:textIsSelectable="true"

                android:layout_below="@+id/add_text_done_tv"
                android:background="@null"
                android:maxLength="300"
                android:scrollbars="vertical"
                android:gravity="center"
                android:textColor="@color/white"
                android:inputType="textMultiLine"
                android:textSize="17sp" />

            <RelativeLayout
                android:id="@+id/add_text_color_picker_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/add_text_edit_text"
              >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/add_text_color_picker_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </RelativeLayout>



</LinearLayout>