<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_margin="@dimen/size3"
    card_view:cardElevation="2dp"
    card_view:contentPadding="0dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardMaxElevation="2dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ECEFF1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size180"
            android:background="@drawable/ripple_effect_android_white"
            android:src="@mipmap/ic_launcher"

            />

        <ImageView
            android:id="@+id/edit_share"
            android:layout_width="@dimen/size35"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/size5"
            android:tint="@color/yellow_color"

            android:visibility="gone"
            android:layout_height="@dimen/size25"
            android:src="@mipmap/ic_launcher"

            />
        <TextView
            android:id="@+id/ImageNameTextView"
            style="@style/TextBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true"
            android:background="@color/transparent_app_color"
            android:gravity="center"


            android:maxLines="1"
            android:ellipsize="end"

            android:textColor="@color/yellow_color"
            android:textSize="@dimen/size16"
            android:typeface="sans" />


    </RelativeLayout>

</android.support.v7.widget.CardView>